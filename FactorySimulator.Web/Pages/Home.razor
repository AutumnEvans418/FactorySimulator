@page "/"
@using FactorySimulator.Display
@using FactorySimulator.Factories
@using FactorySimulator.GameWorld

<PageTitle>Home</PageTitle>

<pre>
    <code>
        @GameMermaid.DisplayFactory(DefaultFactories.BasicScrewFactory(new World()))
    </code>
</pre>

<pre>
    <code class="language-mermaid">
        @GameMermaid.DisplayFactory(DefaultFactories.BasicScrewFactory(new World()))
    </code>
</pre>
<script type="module">
    import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10.0.2/+esm'
    mermaid.initialize({startOnLoad:true,theme:'dark'})
    await mermaid.run({querySelector:'code.language-mermaid'})
</script>
@code {
    public GameMermaid GameMermaid { get; set; } = new(new Game());

    protected override void OnInitialized()
    {
        GameMermaid = new(new Game(DefaultFactories.BasicScrewFactory()))


        base.OnInitialized();
    }
}